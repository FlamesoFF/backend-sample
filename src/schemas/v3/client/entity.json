{
    "$id": "client_entity_v3",
    "$schema": "http://json-schema.org/draft-07/schema",
    "version": "1.0.0",
    "definitions": {
        "list_item": {
            "$id": "entity_list_item",
            "type": "object",
            "description": "Type definition for the entity list output: GET /v3/entities",
            "allOf": [
                {
                    "$ref": "client_definitions_v3#/definitions/list_item_standard"
                }
            ],
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "examples": [
                        "<certificate> <country> [<state>]",
                        "<yyyy-mm-dd> <country>"
                    ]
                }
            }
        },
        "list": {
            "type": "array",
            "description": "Entities list",
            "items": {
                "$ref": "#/definitions/list_item"
            },
            "additionalProperties": false
        }
    }
}