            }
        },
        "company_id": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "client_reference": {
            "type": "null"
        },
        "data": {
            "$ref": "#/definitions/data"
        },
        "stamp": {
            "type": "string",
            "format": "date-time"
        },
        "client_id": {
            "type": "null"
        },
        "contact_email": {
            "$ref": "server_definitions_v3#/definitions/email"
        },
        "contact_id": {
            "$ref": "server_definitions_v3#/definitions/email"
        },
        "thread_ids": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "accounts_status",
        "client_id",
        "client_reference",
        "client_status",
        "company_id",
        "compliance_status",
        "contact_email",
        "contact_id",
        "data",
        "manager_id",
        "order_date",
        "order_id",
        "order_status",
        "stamp",
        "tags",
        "thread_ids"
    ]
