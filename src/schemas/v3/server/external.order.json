        "manager_id": {
            "type": "string"
        },
        "order_status": {
            "type": "string"
        },
        "compliance_status": {
            "type": "string"
        },
        "accounts_status": {
            "type": "string"
        },
        "client_status": {
            "type": "string"
        },
        "order_date": {
            "type": "string",
