{
    "$id": "member_v3",
    "$schema": "http://json-schema.org/draft-07/schema",
    "version": "0.9.0",
    "properties": {
        "_id": {
            "type": "string"
        },
        "class": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "type": {
            "enum": [
                "is_member"
            ]
        },
        "credential": {
            "type": "object",
            "properties": {
                "accepted": {
                    "type": "boolean"
                },
                "password": {
                    "type": "string"
                },
                "password_scheme": {
                    "type": "string"
                },
                "registered_on": {
                    "type": "string"
                },
                "roles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "salt": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "login": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            },
            "required": [
                "accepted",
                "password",
                "password_scheme",
                "registered_on",
                "roles",
                "salt",
                "status",
                "name",
                "login",
                "email"
            ]
        }
    },
    "required": [
        "schema_id",
        "_id",
        "class",
        "name",
        "type",
        "credential"
    ],
    "additionalProperties": false
}